{
  "name": "gloria-x",
  "description": "A chrome-extension project",
  "version": "1.0.0",
  "author": "pana",
  "license": "MIT",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "rimraf dist && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build-watch": "rimraf dist && vue-cli-service build-watch",
    "build-zip": "rimraf dist && vue-cli-service build --mode zipfile",
    "clean": "rimraf dist",
    "fix": "eslint --fix 'src/**/*.{ts,js,vue,scss}'",
    "format": "prettier --write 'src/**/*.{ts,js,vue,scss}'"
  },
  "lint-staged": {
    "src/**/*.{ts,js,vue,scss}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "npm run build-zip"
    }
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "element-ui": "^2.14.1",
    "moment": "^2.29.1",
    "uuid": "^3.4.0",
    "vue": "^2.6.12",
    "vue-float-action-button": "^0.6.6",
    "vuex": "^3.6.0",
    "vuex-chrome-plugin": "^0.1.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@types/chrome": "^0.0.75",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-typescript": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "babel-plugin-component": "^1.1.1",
    "commitizen": "^4.2.2",
    "commitlint": "^11.0.0",
    "copy-webpack-plugin": "^6.3.2",
    "cz-customizable": "^6.3.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^1.19.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "standard-version": "^9.1.0",
    "typescript": "~3.9.3",
    "vue-cli-plugin-chrome-ext": "~0.0.5",
    "vue-template-compiler": "^2.6.11",
    "zip-webpack-plugin": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
