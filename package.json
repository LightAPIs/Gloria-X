{
  "name": "gloria-x",
  "version": "1.4.0",
  "private": true,
  "description": "extension project",
  "author": "pana <new4wang@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build-chrome-watch": "vue-cli-service build-watch --mode chrome",
    "build-firefox-watch": "vue-cli-service build-watch --mode firefox",
    "build-chrome": "vue-cli-service build --mode chromezip",
    "build-firefox": "vue-cli-service build --mode firefoxzip",
    "test:unit": "vue-cli-service test:unit tests/unit/**/*.js",
    "lint": "vue-cli-service lint",
    "clean": "rimraf dist && rimraf build",
    "fix": "eslint --fix 'src/**/*.{ts,js,vue,scss}'",
    "format": "prettier --write 'src/**/*.{ts,js,vue,scss}'",
    "release": "standard-version",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@simonwep/selection-js": "^2.0.0",
    "core-js": "^3.8.3",
    "crypto-js": "^4.0.0",
    "dayjs": "^1.10.4",
    "element-ui": "^2.15.0",
    "gloria-sandbox": "^0.2.7",
    "lodash.debounce": "^4.0.8",
    "lodash.isinteger": "^4.0.4",
    "lodash.isnull": "^3.0.0",
    "scrap-favicon": "^1.0.4",
    "uuid": "^3.4.0",
    "vue": "^2.6.12",
    "vue-contextmenujs": "^1.3.13",
    "vue-float-action-button": "^0.6.6",
    "vue-lazy-render": "^1.0.20",
    "vue-router": "^3.4.9",
    "vuex": "^3.6.0",
    "vuex-chrome-plugin": "^0.1.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@types/chai": "^4.2.11",
    "@types/chrome": "^0.0.75",
    "@types/crypto-js": "^4.0.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.isinteger": "^4.0.6",
    "@types/lodash.isnull": "^3.0.6",
    "@types/mocha": "^5.2.4",
    "@types/sinon-chrome": "^2.2.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "@vue/cli-plugin-babel": "^4.5.11",
    "@vue/cli-plugin-eslint": "^4.5.11",
    "@vue/cli-plugin-typescript": "^4.5.11",
    "@vue/cli-plugin-unit-mocha": "^4.5.11",
    "@vue/cli-plugin-vuex": "^4.5.11",
    "@vue/cli-service": "^4.5.11",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.2",
    "@vue/test-utils": "^1.0.3",
    "babel-plugin-component": "^1.1.1",
    "chai": "^4.1.2",
    "commitizen": "^4.2.3",
    "commitlint": "^11.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "cz-customizable": "^6.3.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.3.8",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.5.3",
    "patch-package": "^6.2.2",
    "prettier": "^1.19.1",
    "raw-loader": "^0.5.1",
    "sass": "^1.32.5",
    "sass-loader": "^8.0.2",
    "sinon-chrome": "^3.0.1",
    "standard-version": "^9.1.0",
    "typescript": "~3.9.3",
    "vue-cli-plugin-chrome-ext": "~0.0.5",
    "vue-template-compiler": "^2.6.11",
    "worker-loader": "^2.0.0",
    "zip-webpack-plugin": "^4.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,vue,scss}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "standard-version": {
    "scripts": {
      "posttag": "npm run build-chrome && npm run build-firefox"
    }
  }
}
